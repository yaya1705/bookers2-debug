<table class="table">
        <tbody>
          <% @book_comments.each do |book_comment|%>
          <tr>
            <td>
              <%= image_tag book_comment.user.get_profile_image(50,50)%>
            </td>
            <td>
              <%= book_comment.comment %>
            </td>
            <td>
                <% if book_comment.user_id == current_user.id %>
                <%= link_to 'Destroy', book_book_comment_path(@book.id,book_comment.id), method: :delete, remote: true, date: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%>
                <% end %>
            </td>
          </tr>
            <% end %>
        </tbody>
      </table>
